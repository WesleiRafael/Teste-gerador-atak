@model EnviarEmailViewModel

@{
    ViewData["Title"] = "Enviar E-mail";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Enviar E-mail</h2>

    <form asp-action="EnviarEmail" asp-controller="Email" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Destinatario" class="form-label">Destinatário</label>
            <input type="email" class="form-control" id="Destinatario" name="Destinatario" required placeholder="Digite o e-mail do destinatário" />
        </div>
        <div class="form-group mb-3">
            <label for="Assunto" class="form-label">Assunto</label>
            <input type="text" class="form-control" id="Assunto" name="Assunto" required placeholder="Digite o assunto do e-mail" />
        </div>
        <div class="form-group mb-3">
            <label for="Corpo" class="form-label">Corpo do E-mail</label>
            <textarea class="form-control" id="Corpo" name="Corpo" rows="6" required placeholder="Escreva o corpo do e-mail"></textarea>
        </div>
        <div class="form-group mb-4">
            <label for="Anexo" class="form-label">Anexo</label>
            <input type="file" class="form-control-file" id="Anexo" name="Anexo" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Enviar E-mail</button>
        </div>
    </form>
</div>


